<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BPopXamarin.Views.ConnectToHostPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Host IP (ex. 192.168.0.109"
                    HorizontalOptions="Center"/>
            <Entry Text="192.168.0.109"
                    x:Name="EntryName"/>
            <Button Text="Connect"
                    TextColor="White"
                    BackgroundColor="#22A7F0"
                    x:Name="ButtonConnect"
                    Clicked="ButtonConnect_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>